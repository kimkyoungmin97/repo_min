<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.a5a5lab.module.code.CodeDao">
<resultMap id="resultMapObj" type="com.a5a5lab.module.code.CodeDto"></resultMap>

<sql id="selectCommon">
		FROM code
		WHERE 1=1
</sql>
	
<select id="selectOneCount" resultType="Integer">
		SELECT COUNT(*)
		<include refid="selectCommon"/>
</select>

<select id="selectList" resultMap="resultMapObj">
	select 
		a.ifcdSeq,
	    a.ifcdDelNy,
	    b.ifcgSeq, 
	    b.ifcgName, 
	    a.ifcdName
    
	from 
		code AS a
	    left join codegroup AS b ON b.ifcgSeq = a.codeGroup_ifcgSeq
	    
</select>
<select id="codeList" resultMap="resultMapObj">
	select
		ifcgSeq,
	    ifcgName
	from
		codegroup
		
</select>
<insert id="insert">
	INSERT INTO code(
		ifcdName,
		codeGroup_ifcgSeq
	)VALUES(
		#{ifcdName},
		#{ifcgSeq}
	)
	
</insert>

	  
</mapper>